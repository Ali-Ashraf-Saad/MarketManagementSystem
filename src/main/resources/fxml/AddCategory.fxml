<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.MMS.ui.AddCategoryController">

    <top>
        <HBox spacing="10" padding="10">
            <Button text="Back"
                    styleClass="back-button"
                    onAction="#back"/>
            <Label text="Add Category / Product"
                   styleClass="title"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15"
              padding="15"
              styleClass="card">

            <Label text="New Category"/>
            <TextField fx:id="categoryNameField"
                       promptText="Category Name"/>

            <Separator/>

            <Label text="Add Product to Existing Category"/>

            <ComboBox fx:id="categoryBox"
                      promptText="Select Category"/>

            <TextField fx:id="productNameField"
                       promptText="Product Name"/>

            <TextField fx:id="priceField"
                       promptText="Price"/>

            <TextField fx:id="quantityField"
                       promptText="Quantity"/>

            <Button text="Save"
                    onAction="#saveCategory"/>

        </VBox>
    </center>
</BorderPane>